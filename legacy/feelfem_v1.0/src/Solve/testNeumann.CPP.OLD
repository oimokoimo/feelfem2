#include "Neumann.hpp"
#include <string.h>
#include <stdlib.h>

static char *testNcopy(char *org )
{
  int len;
  len = strlen(org);
  if(len == 0 || len >1000) {
    cerr << "ERROR in testNcopy  strlen(org)="<<len<< "\n";
    exit(1);
  }

  char *ret = new char[len+1];

  for(int i=0;i<len;i++) {
    *(ret+i) = *(org+i);
  }
  *(ret+len) = '\0';
  return (ret);
}


void Neumann::AddQuadratureArrayLst( char *org)
{
  char *str;
  str = testNcopy(org);
  testQuadratureArrayLst.addlast(str);
  return;
}

